<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5c94c3" >
    <TextView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false" />

    <TextView
        android:id="@+id/name"
        android:layout_below="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Mailman Home"
        android:textColor="#FFFEFE"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/below_name"
        android:layout_below="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:id="@+id/mail_symbol"
        android:layout_below="@+id/below_name"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/manual_button"
        android:layout_below="@+id/mail_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:backgroundTint="#000033"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Manual Controller"
        android:textSize="20sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/notification_button"
        android:layout_below="@+id/manual_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:backgroundTint="#000033"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Send Notification"
        android:textSize="20sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/confirmation_button"
        android:layout_below="@+id/notification_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:backgroundTint="#000033"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Confirmation Notice"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>