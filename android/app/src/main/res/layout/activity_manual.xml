<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"  >
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:id="@+id/above_connect"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/above_connect"
        android:layout_centerVertical="false"
        android:layout_marginTop="-19dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_toStartOf="@+id/stop"
        android:layout_toLeftOf="@+id/stop"
        android:text="start"
        android:textSize="20sp"
        app:backgroundTint="#5CB860"
        app:cornerRadius="0px" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_below="@+id/start"
        android:id="@+id/above_automatic"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <Button
        android:id="@+id/stop"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/above_automatic"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-58dp"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="84dp"
        android:text="stop"
        android:textSize="20sp"
        app:backgroundTint="#F10B0B"
        app:cornerRadius="0px"
        app:iconTint="#D61818" />

    <TextView
        android:id="@+id/above_emergency_break"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/stop"
        android:layout_centerVertical="false"
        android:layout_marginTop="9dp" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/center_manual"
        android:layout_width="150dp"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/forward_manual"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="284dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:backgroundTint="#619a9a"
        android:drawableTop="@drawable/ic_baseline_arrow_drop_up_24"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Forward"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="0px" />

    <Button
        android:id="@+id/right_manual"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="-56dp"
        android:layout_marginTop="381dp"
        android:layout_toRightOf="@id/center_manual"
        android:backgroundTint="#619a9a"
        android:drawableRight="@drawable/ic_baseline_arrow_right_24"
        android:text="Right"
        android:textSize="20sp"
        app:cornerRadius="0px" />

    <Button
        android:id="@+id/backwards_manual"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="89dp"
        android:layout_marginLeft="89dp"
        android:layout_marginTop="466dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:backgroundTint="#619a9a"
        android:drawableBottom="@drawable/ic_baseline_arrow_drop_down_24"
        android:text="Backwards"
        android:textSize="20sp"
        app:cornerRadius="0px" />

    <Button
        android:id="@+id/left_manual"
        android:layout_width="135dp"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="381dp"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:layout_toStartOf="@+id/right_manual"
        android:layout_toLeftOf="@+id/right_manual"
        android:backgroundTint="#619a9a"
        android:drawableLeft="@drawable/ic_baseline_arrow_left_24"
        android:text="Left"
        android:textSize="20sp"
        app:cornerRadius="0px" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="164dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="97dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        tools:srcCompat="@tools:sample/avatars" />
</RelativeLayout>