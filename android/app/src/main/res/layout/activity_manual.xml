<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"  >
    <TextView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false" />

    <TextView
        android:id="@+id/below_top"
        android:layout_below="@+id/top"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="20dp"
        android:layout_height="60dp" />

    <Button
        android:id="@+id/home_manual"
        android:layout_below="@+id/top"
        android:layout_toStartOf="@+id/below_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Home"
        android:textSize="20sp"
        app:backgroundTint="#5CB860"
        app:iconTint="#D61818" />

 
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:contentDescription="cameraView" />

    <Button
        android:id="@+id/stop_manual"
        android:layout_below="@+id/top"
        android:layout_toEndOf="@+id/below_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="stop"
        android:textSize="20sp"
        app:backgroundTint="#F10B0B"
        app:iconTint="#D61818" />


    <ImageView
        android:id="@+id/camera_view"
        android:layout_below="@+id/below_top"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="cameraView" />

    <TextView
        android:id="@+id/below_camera_view"
        android:layout_below="@id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <Button
        android:id="@+id/forward_manual"
        android:layout_below="@+id/below_camera_view"
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:backgroundTint="#619a9a"
        android:drawableTop="@drawable/ic_baseline_arrow_drop_up_24"
        android:fontFamily="sans-serif-smallcaps"
        android:text="F"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/below_forward_manual"
        android:layout_below="@id/forward_manual"
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/align_buttons"
        android:layout_below="@id/below_camera_view"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />
    <Button
        android:id="@+id/left_manual"
        android:layout_below="@id/align_buttons"
        android:layout_toLeftOf="@+id/below_forward_manual"
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:backgroundTint="#619a9a"
        android:drawableLeft="@drawable/ic_baseline_arrow_left_24"
        android:text="L"
        android:textSize="20sp" />

    <Button
        android:id="@+id/right_manual"
        android:layout_below="@+id/align_buttons"
        android:layout_toRightOf="@+id/below_forward_manual"
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:backgroundTint="#619a9a"
        android:drawableRight="@drawable/ic_baseline_arrow_right_24"
        android:text="R"
        android:textSize="20sp" />

    <Button
        android:id="@+id/backwards_manual"
        android:layout_below="@+id/below_forward_manual"
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:backgroundTint="#619a9a"
        android:drawableBottom="@drawable/ic_baseline_arrow_drop_down_24"
        android:text="B"
        android:textSize="20sp" />


</RelativeLayout>