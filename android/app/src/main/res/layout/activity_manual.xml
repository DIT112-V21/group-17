<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"  >
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:id="@+id/above_connect"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/above_connect"
        android:layout_centerVertical="false"
        android:layout_marginTop="-19dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_toStartOf="@+id/stop"
        android:layout_toLeftOf="@+id/stop"
        android:text="start"
        android:textSize="20sp"
        app:backgroundTint="#5CB860" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_below="@+id/start"
        android:id="@+id/above_automatic"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <Button
        android:id="@+id/stop"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/above_automatic"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-58dp"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="84dp"
        android:text="stop"
        android:textSize="20sp"
        app:backgroundTint="#F10B0B"
        app:iconTint="#D61818" />

    <TextView
        android:id="@+id/above_emergency_break"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/stop"
        android:layout_centerVertical="false"
        android:layout_marginTop="9dp" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/center_manual"
        android:layout_width="150dp"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/forward_manual"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="122dp"
        android:layout_marginLeft="122dp"
        android:layout_marginTop="406dp"
        android:layout_marginEnd="129dp"
        android:layout_marginRight="129dp"
        android:backgroundTint="#619a9a"
        android:drawableTop="@drawable/ic_baseline_arrow_drop_up_24"
        android:fontFamily="sans-serif-smallcaps"
        android:text="F"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/right_manual"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="-37dp"
        android:layout_marginTop="492dp"
        android:layout_marginBottom="159dp"
        android:layout_toRightOf="@id/center_manual"
        android:backgroundTint="#619a9a"
        android:drawableRight="@drawable/ic_baseline_arrow_right_24"
        android:text="R"
        android:textSize="20sp" />

    <Button
        android:id="@+id/backwards_manual"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="129dp"
        android:layout_marginLeft="129dp"
        android:layout_marginTop="577dp"
        android:layout_marginEnd="130dp"
        android:layout_marginRight="130dp"
        android:backgroundTint="#619a9a"
        android:drawableBottom="@drawable/ic_baseline_arrow_drop_down_24"
        android:text="BWD"
        android:textSize="20sp" />

    <Button
        android:id="@+id/left_manual"
        android:layout_width="130dp"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="489dp"
        android:layout_marginEnd="91dp"
        android:layout_marginRight="91dp"
        android:layout_marginBottom="160dp"
        android:layout_toStartOf="@+id/right_manual"
        android:layout_toLeftOf="@+id/right_manual"
        android:backgroundTint="#619a9a"
        android:drawableLeft="@drawable/ic_baseline_arrow_left_24"
        android:text="L"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="97dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        tools:srcCompat="@tools:sample/avatars" />
</RelativeLayout>